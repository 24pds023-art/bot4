# Ultra-Fast Scalping System Environment Configuration
# ===================================================

# =============================================================================
# BINANCE API CREDENTIALS (REQUIRED)
# =============================================================================

# Testnet API (for testing - RECOMMENDED to start with)
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

# Production API (for live trading - USE WITH CAUTION)
BINANCE_API_KEY=your_production_api_key_here
BINANCE_API_SECRET=your_production_api_secret_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Environment settings
USE_TESTNET=true
ENVIRONMENT=development

# Basic trading parameters
BASE_POSITION_USD=100
LEVERAGE=15
MAX_CONCURRENT_POSITIONS=20

# Risk management
STOP_LOSS_PCT=0.002
TAKE_PROFIT_PCT=0.004
MAX_DAILY_LOSS=500
MAX_PORTFOLIO_RISK=0.02

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================

# System optimization
USE_ULTRA_LOW_LATENCY=true
USE_ZERO_ALLOCATION=true
USE_HARDWARE_ACCELERATION=true
CPU_CORES=0,1,2,3

# Memory settings
MEMORY_POOLS_ENABLED=true
CACHE_SIZE=2000
QUEUE_SIZE=8192

# =============================================================================
# SIGNAL CONFIGURATION
# =============================================================================

# Signal thresholds
SIGNAL_THRESHOLD=0.12
CONFIDENCE_THRESHOLD=0.60
MIN_CONFIRMATIONS=1

# Signal types
USE_MOMENTUM_SCALPING=true
USE_MEAN_REVERSION=true
USE_ORDER_FLOW=true
USE_VOLUME_SPIKES=true
USE_MARKET_MAKING=true

# =============================================================================
# SYSTEM SETTINGS
# =============================================================================

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=logs/trading_system.log

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
METRICS_COLLECTION_INTERVAL=60
ENABLE_REAL_TIME_DASHBOARD=true

# Database (optional - for trade history)
DATABASE_URL=sqlite:///data/trading_history.db

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Development mode
DEBUG_MODE=false
SIMULATION_MODE=false
BENCHMARK_MODE=false

# Testing
RUN_PERFORMANCE_TESTS=false
ENABLE_PROFILING=false

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Network optimization
WEBSOCKET_CONNECTIONS=10
HTTP_TIMEOUT=5.0
CONNECTION_POOL_SIZE=100

# Processing cycles (milliseconds)
MAIN_LOOP_CYCLE=100
SIGNAL_PROCESSING_CYCLE=50
RISK_CHECK_CYCLE=1000

# Memory optimization
MEMORY_ALIGNMENT=64
PREFAULT_MEMORY=true
NUMA_OPTIMIZATION=true

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Telegram notifications (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Discord notifications (optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Email notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
NOTIFICATION_EMAIL=alerts@yourdomain.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API security
API_KEY_ENCRYPTION=true
USE_IP_WHITELIST=true
ALLOWED_IPS=127.0.0.1,your_server_ip

# System security
ENABLE_FIREWALL_RULES=true
SECURE_MEMORY=true
CLEAR_SENSITIVE_DATA=true

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Data backup
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# Recovery settings
ENABLE_AUTO_RECOVERY=true
RECOVERY_MODE_DURATION=3600
RECOVERY_POSITION_MULTIPLIER=0.5