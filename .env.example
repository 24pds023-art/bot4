# ULTRA-FAST SCALPING TRADING SYSTEM CONFIGURATION
# ================================================
# Copy this file to .env and configure with your real values

# =================
# BINANCE API KEYS
# =================

# TESTNET (RECOMMENDED FOR TESTING)
# Get testnet keys from: https://testnet.binancefuture.com/
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

# LIVE PRODUCTION (⚠️ REAL MONEY - USE WITH CAUTION)
# Get live keys from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_live_api_key_here
BINANCE_API_SECRET=your_live_api_secret_here

# =================
# ENVIRONMENT
# =================

# Set to 'false' for LIVE trading with real money
USE_TESTNET=true

# Trading mode
REAL_TRADING_MODE=true

# =================
# TRADING PARAMETERS
# =================

# Symbols to trade (comma-separated)
TRADING_SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT

# Position sizing
BASE_POSITION_USD=50
LEVERAGE=5
MAX_POSITIONS=3

# =================
# RISK MANAGEMENT
# =================

# Maximum daily loss in USD
MAX_DAILY_LOSS=100

# Stop loss and take profit percentages
STOP_LOSS_PCT=0.002
TAKE_PROFIT_PCT=0.006

# Position limits
MAX_POSITION_SIZE_PCT=0.02
MAX_TOTAL_EXPOSURE_PCT=0.10
MAX_DRAWDOWN_PCT=0.05

# =================
# SIGNAL PARAMETERS
# =================

# Signal strength threshold (0.0 to 1.0)
SIGNAL_STRENGTH_THRESHOLD=0.6

# Minimum time between signals (seconds)
MIN_SIGNAL_INTERVAL=5.0

# Momentum threshold for signal generation
MOMENTUM_THRESHOLD=0.0008

# Volume spike threshold (multiplier)
VOLUME_SPIKE_THRESHOLD=1.5

# =================
# SYSTEM SETTINGS
# =================

# API timeout (seconds)
API_TIMEOUT=30

# Maximum retries for API calls
MAX_RETRIES=3

# WebSocket ping interval (seconds)
WS_PING_INTERVAL=20

# =================
# LOGGING & MONITORING
# =================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable file logging
LOG_TO_FILE=true

# Performance monitoring intervals (seconds)
EXIT_CHECK_INTERVAL=2
PERFORMANCE_LOG_INTERVAL=60
RISK_CHECK_INTERVAL=10

# =================
# DATA STORAGE
# =================

# Save trade history
SAVE_TRADES=true

# Save signal history
SAVE_SIGNALS=true

# Backup interval (seconds)
BACKUP_INTERVAL=3600

# =================
# ADVANCED SETTINGS
# =================

# Enable advanced features
ENABLE_ADVANCED_SIGNALS=true
ENABLE_ML_FILTERING=false
ENABLE_GPU_ACCELERATION=false

# Memory optimization
ENABLE_MEMORY_OPTIMIZATION=true
ENABLE_ZERO_COPY=true

# CPU optimization
CPU_AFFINITY_ENABLED=false
NUMA_OPTIMIZATION=false