# REAL TRADING SYSTEM CONFIGURATION
# =================================
# üî• REAL API CREDENTIALS - NO SIMULATIONS
# ‚ö†Ô∏è  CONFIGURE WITH YOUR ACTUAL BINANCE API KEYS

# =============================================================================
# BINANCE API CREDENTIALS (REQUIRED FOR REAL TRADING)
# =============================================================================

# TESTNET (RECOMMENDED FOR TESTING)
BINANCE_TESTNET_API_KEY=your_real_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_real_testnet_api_secret_here

# LIVE PRODUCTION (‚ö†Ô∏è REAL MONEY - USE WITH EXTREME CAUTION)
BINANCE_API_KEY=your_real_live_api_key_here
BINANCE_API_SECRET=your_real_live_api_secret_here

# =============================================================================
# TRADING ENVIRONMENT
# =============================================================================

# Set to 'true' for testnet, 'false' for live production
USE_TESTNET=true

# Trading mode
REAL_TRADING_MODE=true
NO_SIMULATIONS=true

# =============================================================================
# REAL TRADING PARAMETERS
# =============================================================================

# Position sizing (USD)
BASE_POSITION_USD=100
MAX_POSITION_USD=1000
LEVERAGE=10

# Risk management
STOP_LOSS_PCT=0.002          # 0.2% stop loss
TAKE_PROFIT_PCT=0.004        # 0.4% take profit
MAX_DAILY_LOSS=500           # $500 maximum daily loss
MAX_DRAWDOWN=0.05            # 5% maximum drawdown

# Portfolio limits
MAX_CONCURRENT_POSITIONS=10
MAX_PORTFOLIO_RISK=0.02      # 2% portfolio risk

# =============================================================================
# REAL SIGNAL CONFIGURATION
# =============================================================================

# Signal thresholds for REAL trading
SIGNAL_STRENGTH_THRESHOLD=0.3    # Higher threshold for real money
CONFIDENCE_THRESHOLD=0.7         # Higher confidence for real trades
MIN_CONFIRMATIONS=2              # Multiple confirmations required

# Signal types (enable/disable)
USE_MOMENTUM_SCALPING=true
USE_MEAN_REVERSION=true
USE_ORDER_FLOW=true
USE_VOLUME_SPIKES=true
USE_BREAKOUT_SCALPING=true

# =============================================================================
# REAL EXECUTION SETTINGS
# =============================================================================

# Order execution
ORDER_TYPE=MARKET               # MARKET for speed, LIMIT for better prices
TIME_IN_FORCE=IOC              # Immediate or Cancel
MAX_EXECUTION_TIME=5000        # 5 seconds max execution time

# WebSocket settings
WEBSOCKET_TIMEOUT=30
RECONNECT_DELAY=5
MAX_RECONNECT_ATTEMPTS=10

# =============================================================================
# REAL PERFORMANCE MONITORING
# =============================================================================

# Logging
LOG_LEVEL=INFO
LOG_REAL_TRADES=true
LOG_MARKET_DATA=false          # Too verbose for production
LOG_PERFORMANCE_METRICS=true

# Monitoring intervals
PERFORMANCE_LOG_INTERVAL=60    # Log performance every 60 seconds
RISK_CHECK_INTERVAL=10         # Check risk every 10 seconds
POSITION_UPDATE_INTERVAL=5     # Update positions every 5 seconds

# =============================================================================
# REAL SAFETY FEATURES
# =============================================================================

# Emergency stops
ENABLE_EMERGENCY_STOPS=true
MAX_CONSECUTIVE_LOSSES=5       # Stop after 5 consecutive losses
EMERGENCY_STOP_LOSS_PCT=0.10   # Emergency stop at 10% loss

# API safety
ENABLE_API_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=1000
ENABLE_ORDER_VALIDATION=true

# =============================================================================
# REAL MARKET DATA SOURCES
# =============================================================================

# Primary symbols for REAL trading
TRADING_SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT,ADAUSDT,XRPUSDT

# Market data streams
ENABLE_TICKER_STREAM=true
ENABLE_DEPTH_STREAM=true
ENABLE_TRADES_STREAM=true
ENABLE_KLINE_STREAM=false      # Not needed for scalping

# =============================================================================
# REAL NOTIFICATIONS (OPTIONAL)
# =============================================================================

# Telegram notifications for real trades
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
NOTIFY_ON_TRADES=true
NOTIFY_ON_ERRORS=true

# Email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
NOTIFICATION_EMAIL=alerts@yourdomain.com

# =============================================================================
# REAL DATABASE (OPTIONAL)
# =============================================================================

# Trade history database
DATABASE_URL=sqlite:///data/real_trades.db
ENABLE_TRADE_LOGGING=true
BACKUP_TRADES=true

# =============================================================================
# REAL SYSTEM OPTIMIZATION
# =============================================================================

# Performance settings for REAL trading
CPU_CORES=0,1,2,3              # Dedicated CPU cores
MEMORY_POOLS_ENABLED=true
CACHE_SIZE=2000
QUEUE_SIZE=8192

# Network optimization
CONNECTION_POOL_SIZE=50
HTTP_TIMEOUT=5.0
WEBSOCKET_PING_INTERVAL=20

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development mode (set to false for production)
DEBUG_MODE=false
ENABLE_PROFILING=false
BENCHMARK_MODE=false

# Testing
RUN_CONNECTION_TEST=true
VALIDATE_SYMBOLS=true
CHECK_ACCOUNT_BALANCE=true